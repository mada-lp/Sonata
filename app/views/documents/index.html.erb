<h1>Pasta Digitalizada</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Conteúdo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.content || document.file %></td>
        <td><%= link_to 'Exibir', document %></td>
      </tr>
    <% end %>
  </tbody>
</table>

